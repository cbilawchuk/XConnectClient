@using XConnectClientWebApp.Models

@model ContactViewModel
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12  toppad">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="col-md-9 toppad">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Upload</h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm("FileUpload", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label for="file">Upload Image:</label>
                            <span class="input-group-btn">
                                <input type="file" name="file" id="file" style="width: 100%;" class="btn btn-default btn-file" />
                            </span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Upload" class="btn btn-primary" />
                            <a href="@Url.Action("Index", "Profile", new { id = Model.SourceId})" class="btn btn-default">Cancel</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>