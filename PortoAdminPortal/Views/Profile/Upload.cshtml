@using XConnectClientWebApp.Models

@model ContactViewModel
@{
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section role="main" class="content-body background-color-light">
    <header class="page-header">
        <h2>@ViewBag.Title.</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/App/Index">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span>Pages</span></li>
                <li><span>@ViewBag.Title.</span></li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
        </div>
    </header>

    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <div class="pull-right">
                        <a href="@Url.Action("Index", "Profile", new { id = Model.SourceId})" class="btn btn-xs btn-warning">Back to profile</a>
                    </div>
                    <h2 class="card-title">@(Model.Name != null && !Model.Name.Equals(" ") ? Model.Name : "Unknown")</h2>
                </header>
                <div class="card-body">
                    @using (Html.BeginForm("FileUpload", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">Prefix</label>
                            <div class="col-lg-6">
                                <input type="file" name="file" id="file" style="width: 100%;" class="btn btn-default btn-file" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="inputDefault">&nbsp;</label>
                            <div class="col-lg-6">
                                <input type="submit" id="submit" name="submit" class="btn btn-primary" value="Upload">
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
                            </div>
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</section>
